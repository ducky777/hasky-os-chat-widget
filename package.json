{
  "name": "@ducky777/chat-widget",
  "version": "1.1.0",
  "description": "Phone-style chat modal component with WhatsApp and iMessage themes. Supports CDN embedding with full checkout flow.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles.css",
    "./embed": {
      "types": "./dist/embed/index.d.ts",
      "import": "./dist/embed/index.mjs",
      "require": "./dist/embed/index.js"
    }
  },
  "files": [
    "dist",
    "src/styles",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:embed": "POSTHOG_API_KEY=$POSTHOG_API_KEY tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react",
    "chat",
    "modal",
    "whatsapp",
    "imessage",
    "phone",
    "widget"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ducky777/hasky-os-chat-widget.git"
  },
  "license": "UNLICENSED",
  "private": true
}
